@model WebApplicationBalance.Models.Payment

@{
    ViewData["Title"] = "Создать платеж";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePayment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account_Id" class="control-label"></label>
                @* <input asp-for="Personal_Account" class="form-control" /> *@
                <select asp-for="Account_Id" class="form-control">
                    @foreach (var item in ViewBag.accounts)
                    {
                        <option value=@item.Id>@item.Personal_Account ( @item.Description )</option>
                    }
                </select>
                <span asp-validation-for="Account_Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sum_payment" class="control-label"></label>
                <input asp-for="Sum_payment" class="form-control" />
                <span asp-validation-for="Sum_payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Purpose_payment" class="control-label"></label>
                <input asp-for="Purpose_payment" class="form-control" />
                <span asp-validation-for="Purpose_payment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Оплатить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Payment">Вернуться к списку платежей</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
